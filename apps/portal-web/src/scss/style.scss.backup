  .bg-brand-accentGreen-300 { background-color: $color-accent-green-300; }
  .bg-brand-accentGreen-500 { background-color: $color-accent-green-500; }
  .bg-brand-accentGreen-700 { background-color: $color-accent-green-700; }
  .bg-brand-accentGreen-900 { background-color: $color-accent-green-900; }
  .bg-background-page { background-color: $color-background-page; }
  .bg-background-card { background-color: $color-background-card; }
  .bg-background-focus { background-color: $color-background-focus; }
