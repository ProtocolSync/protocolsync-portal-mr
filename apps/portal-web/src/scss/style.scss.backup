  .px-xs { padding-left: $spacing-xs; padding-right: $spacing-xs; }
  .px-s { padding-left: $spacing-s; padding-right: $spacing-s; }
  .px-m { padding-left: $spacing-m; padding-right: $spacing-m; }
  .px-l { padding-left: $spacing-l; padding-right: $spacing-l; }
  .px-xl { padding-left: $spacing-xl; padding-right: $spacing-xl; }
  .px-8 { padding-left: 2rem; padding-right: 2rem; }
  
  .py-xxs { padding-top: $spacing-xxs; padding-bottom: $spacing-xxs; }
  .py-xs { padding-top: $spacing-xs; padding-bottom: $spacing-xs; }
  .py-s { padding-top: $spacing-s; padding-bottom: $spacing-s; }
  .py-m { padding-top: $spacing-m; padding-bottom: $spacing-m; }
